<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Income Table -->
    <TableLayout
        android:id="@+id/incomeTable"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:stretchColumns="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/expenseTable"/>

    <!-- Expense Table -->
    <TableLayout
        android:id="@+id/expenseTable"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:stretchColumns="1"
        app:layout_constraintTop_toBottomOf="@id/incomeTable"
        app:layout_constraintBottom_toTopOf="@id/viewPieChartBtn"/>

    <!-- Pie Chart Button -->
    <Button
        android:id="@+id/viewPieChartBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Pie Chart"
        android:drawableStart="@drawable/ic_pie_chart"
        android:drawablePadding="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>